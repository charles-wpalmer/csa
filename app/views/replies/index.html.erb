<p id="notice"><%= notice %></p>

<h1>Replies</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Parent</th>
      <th>Post</th>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.user.firstname + " " + reply.user.surname %></td>
        <% if reply.parent %>
          <td><%= reply.parent.title %></td>
        <% else %>
            <td> -- </td>
        <% end %>
        <td><%= reply.post.title %></td>
        <td><%= reply.title %></td>
        <td><%= reply.text %></td>
        <td><%= link_to 'Show', reply %></td>
        <td><%= link_to 'Edit', edit_reply_path(reply) %></td>
        <td><%= link_to 'Destroy', reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

