<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<p>
  <strong>Post count:</strong>
  <%= @post.post_count %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p>
  <strong>Anonymous:</strong>
  <%= @post.anonymous %>
</p>

<table>
  <thead>
  <tr>
    <th>User</th>
    <th>Parent</th>
    <th>Post</th>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.user.firstname + " " + reply.user.surname %></td>
        <% if reply.parent %>
            <td><%= reply.parent.title %></td>
        <% else %>
            <td> -- </td>
        <% end %>
        <td><%= reply.post.title %></td>
        <td><%= reply.title %></td>
        <td><%= reply.text %></td>
        <td><%= link_to 'Reply', new_reply_path + "/post/#{@post.id}/reply/#{reply.id}"%></td>
        <td><%= build_replies(reply.responses, @post.id, '') %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Reply', new_reply_path + "/post/#{@post.id}"%> |
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
