<p id="notice"><%= notice %></p>
<br>
<% unread_posts(@post.id) %>
<% mark_as_read(@post.id) %>
<div class="response">
  <p>
    <%= @post.user.firstname + " " + @post.user.surname%>
  </p>
  <p>
    <%= check_unread(@post) %>
    <%= display_date(@post.created_at) %>
  </p>
  <p>
    <strong><%= @post.title %></strong>
  </p>
  <br>
  <p>
    <%= @post.text %>
  </p>
  <br>
  <%= link_to 'Reply', new_reply_path + post_path(@post) %>
</div>

  <% @replies.each do |reply| %>
    <div class="response">
      <p><%= reply.user.firstname + " " + reply.user.surname %></p>
      <%= check_unread(reply) %>


      <p><%= display_date(reply.created_at) %></p>
      <p><strong><%= reply.title %></strong></p>
      <br>
      <p><%= reply.text %></p>
      <br>
      <p><%= link_to 'Reply', new_reply_path + post_path(@post) + reply_path(reply) %></p>
    </div>
    <%= build_replies(reply.responses, @post.id) %>

  <% end %>

<%= link_to 'Back', posts_path(page: @current_page) %>
