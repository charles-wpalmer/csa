<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Posted</th>
      <th>Title</th>
      <th>Post count</th>
      <th>Unread Posts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if post.anonymous %>
            <td>Anonymous</td>
        <% else %>
            <td><%= post.user.firstname %></td>
        <% end %>
        <td><%= display_date(post.created_at) %></td>
        <td><%= post.title %></td>
        <td><%= post.post_count %></td>
        <td> TODO: unread posts </td>
        <td><%= link_to 'View Replies', post_path(post, page: @posts.current_page) %></td>
        <% if current_user.id == post.user_id %>
            <td><%= link_to 'Destroy', post_path(post, page: @posts.current_page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination">
  <div>
    <%= page_entries_info @posts %>
  </div>
  <%= will_paginate @posts, container: false %>
</div>

<%= link_to 'Create Thread', new_post_path %>
