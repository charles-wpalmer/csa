<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Posted</th>
      <th>Title</th>
      <th>Post count</th>
      <th>Unread Posts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if post.anonymous %>
            <td>Anonymous</td>
        <% else %>
            <td><%= post.user.firstname %></td>
        <% end %>
        <td><%= post.created_at %></td>
        <td><%= post.title %></td>
        <td><%= post.post_count %></td>
        <td> TODO: unread posts </td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Thread', new_post_path %>
